# ===========================================
# NOTIFICATION GATEWAY GRITA - CONFIGURATION TEMPLATE
# ===========================================
# Copy this file to .env and fill in your actual values

# ===========================================
# DATABASE CONFIGURATION (PostgreSQL)
# ===========================================
POSTGRES_DBNAME=notification_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ===========================================
# KAFKA CONFIGURATION
# ===========================================
# Kafka Bootstrap Servers (comma-separated for multiple brokers)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Kafka Topics
KAFKA_TOPIC=ALARM_EVENTS
NOTIFICATION_LOGS_TOPIC=NOTIFICATION_LOGS

# Kafka Consumer Group
ALARM_KAFKA_GROUP_ID=notification_gateway_consumers

# Kafka Authentication (optional, leave empty if not using SASL)
KAFKA_USERNAME=
KAFKA_PASSWORD=

# ===========================================
# TELEGRAM BOT CONFIGURATION
# ===========================================
# Get this from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Default chat ID for admin notifications (optional)
TELEGRAM_CHAT_ID=-1001234567890

# ===========================================
# WAHA (WhatsApp HTTP API) CONFIGURATION
# ===========================================
# WAHA Server URL (default: http://localhost:3000)
WAHA_API_URL=http://localhost:3000

# WAHA Session Name (default: default)
WAHA_SESSION_NAME=default

# WAHA API Key (optional, for security)
# Generate using: docker exec waha npm run generate-api-key
WAHA_API_KEY=

# ===========================================
# APPLICATION SETTINGS
# ===========================================
# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Application Name
APP_NAME=Notification Gateway GRITA

# ===========================================
# PRIORITY LEVELS CONFIGURATION
# ===========================================
# Define which priority levels exist in your system
# Format: P1=Critical, P2=High, P3=Medium, P4=Low
PRIORITY_LEVELS=P1,P2,P3,P4

# ===========================================
# NOTIFICATION SETTINGS
# ===========================================
# Delay between notifications (seconds)
NOTIFICATION_DELAY=1

# Maximum retry attempts for failed notifications
MAX_RETRY_ATTEMPTS=3

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Set to 'development' for debug mode, 'production' for live
ENVIRONMENT=development

# Enable/disable debug logging
DEBUG_MODE=true
